{
    "compilerOptions": {
        "target": "es2017",
        "module": "umd",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "outDir": "build",
        "lib": [
            "es2017"
        ],
        "types": [
            "@types/node"
        ]
    },
    "include": [
        "../../src",
        "../../src/test"
    ],
    "exclude": [
        ".vscode",
        "build",
        "node_modules"
    ]
}